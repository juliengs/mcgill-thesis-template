% standard form of hyperlinks for LaTeX

\providecommand{\href}[2]{%
%%tth:\ \special{html:<a href=}{"}#1"\special{html:>}{#2}\special{html:</a>}
\tthdump{#2}%
}

% link to a document that should appear in a new window

\newcommand{\wref}[2]{%
%%tth:\ \special{html:<a href=}{"}#1"\special{html:target=" ">}{#2}\special{html:</a>}
\tthdump{#2}%
}

% LaTeX-\ref extended with a text to prepend and an optional URL
% to prepend the generated reference.

\providecommand{\xref}[3][]{\tthdump{#3~\ref{#2}}%
%%tth:\special{html:<a href=}{"}#1\##2"\special{html:>}%
%%tth:#3~\ref{#2}\special{html:</a>}%
}

% ------- \xcite[URL]{cite-id}{preceding text}
%

\providecommand{\xcite}[3][]{% \tthdump{#3 \cite{#2}}%
%%tth:\special{html:<a href=}{"}#1\##2"\special{html:>}%
#3~\cite{#2}%
%%tth:\special{html:</a>}%
}

% a minor shorthand

\providecommand{\tthbib}[1]{%
%%tth:\bibliography{#1}
%%tth:\bibliographystyle{plain}
}

